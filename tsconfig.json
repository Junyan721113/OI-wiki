{
  "compilerOptions": {
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "target": "ES2021",
    "strict": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./scripts",
    "noEmit": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
