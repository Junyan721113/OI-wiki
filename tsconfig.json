{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./scripts",
    "noEmit": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
